<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th> Name </th>
      <th> Email </th>
      <th> Login </th>
      <th> Location </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.login %></td>
        <td><%= user.location %></td>
        <td><%= link_to 'Show', profile_path(user) %></td>
        <td><%= link_to 'Destroy', profile_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
